<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_back_colors"
    tools:context="com.paivadeveloper.clubdollar.activity.ProdutosActivity">

    <ImageView
        android:id="@+id/servico_img"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/btn_border"
        android:padding="3dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:layout_below="@+id/servico_img"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        app:cardBackgroundColor="#80000000"
        app:cardCornerRadius="10dp"
        app:cardElevation="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignStart="@+id/cardView"
            android:layout_below="@+id/servico_img">


            <EditText
                android:id="@+id/promo_edit_id"
                android:layout_width="250dp"
                android:layout_height="41dp"
                android:layout_above="@+id/editText"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="14dp"
                android:background="@drawable/btn_border"
                android:ems="10"
                android:hint="Nome do serviço"
                android:inputType="text"
                android:padding="6dp"
                android:text=""
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/btn_color"
                android:textColorHighlight="@color/btn_color"
                android:textColorHint="@color/btn_color" />


            <EditText
                android:id="@+id/editText"
                android:layout_width="250dp"
                android:layout_height="41dp"
                android:layout_alignStart="@+id/promo_edit_id"
                android:layout_centerVertical="true"
                android:background="@drawable/btn_border"
                android:ems="10"
                android:hint="Valor do serviço"
                android:inputType="text"
                android:padding="6dp"
                android:text=""
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/btn_color"
                android:textColorHighlight="@color/btn_color"
                android:textColorHint="@color/btn_color" />

            <Button
                android:id="@+id/promo_botao2_id"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editText"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="29dp"
                android:background="@drawable/selector_botao"
                android:text="Cadastrar Serviço"
                android:textAllCaps="false"
                android:textColor="@color/btn_color" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>
